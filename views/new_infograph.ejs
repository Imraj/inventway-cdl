<header id="gtco-header" class="gtco-cover"  style="background-image:url(images/img_bg_1.jpg);height:100px;">

</header>
<div class="gtco-section">
  <div class="gtco-container">
      <div class="row row-pb-md">
          <div class="col-md-10 col-md-offset-1 animate-box">
              <h2>New Designer </h2>
              <hr/>


              <form name="DesignerForm">
                    <div class="row form-group">
                      <div class="col-md-12">
                        <div class="col-md-4">
                          <img src="images/profile.jpg" ng-click="uploadImage()" height="150" width="125" style="width:100%;" />
                        </div>

                        <div class="col-md-8">
                          <input type="text" id="firstname" name="firstname" class="form-control" ng-model="designer.firstname" placeholder="Your first name" required>
                          <div class="error-msg" ng-messages="DesignerForm.firstname.$error" ng-if="DesignerForm.firstname.$touched">
                              <span ng-message="required">First name is required</span>
                          </div>
                        </div>
                        <div class="col-md-8" style="margin-top:1em;">
                          <input type="text" id="lastname" name="lastname" class="form-control" ng-model="designer.lastname" placeholder="Your last name" required>
                          <div class="error-msg" ng-messages="DesignerForm.lastname.$error" ng-if="DesignerForm.lastname.$touched">
                              <span ng-message="required">Last name is required</span>
                          </div>
                        </div>

                      </div>

                    </div>

                    <div class="row form-group">
                      <div class="col-md-12">
                        <div class="col-md-6">
                            <input type="text" id="email" name="email" class="form-control" required ng-model="designer.email" placeholder="Your email address">
                            <div class="error-msg" ng-messages="DesignerForm.email.$error" ng-if="DesignerForm.email.$touched">
                                <span ng-message="required">Email is required</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <input type="text" id="skypeId" name="skypeId" class="form-control" ng-model="designer.skypeId" placeholder="Your Skype Id">

                        </div>
                      </div>
                    </div>



                    <div class="row form-group">
                      <div class="col-md-12">
                        <div class="col-md-12">
                            <textarea name="shortIntro" required  cols="30" rows="1" ng-model="designer.shortIntro" class="form-control" placeholder="Short Intro of you"></textarea>
                            <div class="error-msg" ng-messages="DesignerForm.shortIntro.$error" ng-if="DesignerForm.shortIntro.$touched">
                                <span ng-message="required">Short Intro is required</span>
                            </div>
                        </div>
                      </div>
                    </div>

                    <div class="row form-group">
                      <div class="col-md-12">
                        <div class="col-md-12">
                            <textarea name="about" required cols="30" rows="3" ng-model="designer.about" class="form-control" placeholder="About you"></textarea>
                            <div class="error-msg" ng-messages="DesignerForm.about.$error" ng-if="DesignerForm.about.$touched">
                                <span ng-message="required">About you is required</span>
                            </div>
                        </div>
                      </div>
                    </div>
                    <hr/>

                    <div class="row form-group">
                      <div class="col-md-12">
                        <h3>Portfolio / Previous works</h3>
                        <div class="col-md-4">
                          <img src="images/upl.png" ng-click="uploadPortfolio()" height="300" width="100" style="width:100%;" />
                        </div>
                        <div class="col-md-4">
                          <img src="images/upl.png" ng-click="uploadPortfolio()"  height="300" width="100" style="width:100%;" />
                        </div>
                        <div class="col-md-4">
                          <img src="images/upl.png" ng-click="uploadPortfolio()"  height="300" width="100" style="width:100%;" />
                        </div>
                      </div>
                    </div>
                    <hr/>
                        <div class="row form-group">
                          <div class="col-md-12">
                            <h3> Categories (Select all that applies)</h3>
                            <div class="col-md-6 ">

                              <div ng-repeat="c in categories track by $index">
                              //ng-model="designer.categories[$index]"
                                <input type="checkbox" value="{{c}}" ng-checked="designer.categories.indexOf(c)>-1" ng-clicked="toggleSelection(c)" style="width:1.4em;height:1.2em;"  />
                                 <span style="font-size:1.5em;">{{c}}</span>
                              </div>


                            </div>

                          </div>
                        </div>



                  <div class="form-group" style="margin-top:5em;">
                    <input type="submit" value="Create Profile" ng-disabled="DesignerForm.$invalid" ng-click="addDesigner()" class="btn btn-primary btn-lg col-md-12">
                  </div>

            </form>
          </div>

        </div>
      </div>

    </div>
  </div>
