<header id="gtco-header" class="gtco-cover"  style="background-image:url(images/img_bg_1.jpg);height:100px;">

</header>
<div class="gtco-section">
 <div class="gtco-container">
   <div class="row row-pb-md">
     <div class="col-md-12 animate-box">

         <div class="row">
             <div class="col-md-12">

                 <hr/>

                 <div class="col-md-12">
                     <div class="col-md-5">
                         <u>{{quiz_details.country}} / {{quiz_details.state}}  	Language : {{quiz_details.foreignLanguage}}</u>
                     </div>
                     <div class="col-md-5 col-md-offset-2 pull-right">
                         <u>Quiz Name : {{quiz_details.quizName}}</u>
                     </div>
                 </div>
                 <div class="col-md-12">
                     <div class="col-md-5">

                     </div>
                 </div>
                 <div class="col-md-12">

                       <hr/>
                       <div> <h3 class="col-md-3">Question {{qIndex}} / {{quiz_details.numberOfQuestions}}</h3> </div><br/>

                 </div>
                 <div class="col-md-12" ng-repeat="q in quiz_details.mainQuiz track by $index">

                     <div class="col-md-12" ng-show="qIndex-1 == $index">
                          <div style="font-size:1.5em;">
                             {{q.text}}
                           </div>
                           <br/>
                           <div ng-show="q.questionImage">
                               <img src="{{q.questionImage}}" class="col-md-12" height="150" width="250" />
                           </div>
                           <br/>
                           <div style="font-size:1.5em;">
                               <input type="radio" style="width:1em;height:1em;" name="option" ng-model="manswer.choosen" value="{{q.optionA}}" class=""/>
                               &nbsp;
                               {{q.optionA}}
                           </div>

                           <div style="font-size:1.5em;">
                               <input type="radio" style="width:1em;height:1em;" name="option" ng-model="manswer.choosen" value="{{q.optionB}}" class=""/>
                               &nbsp;
                               {{q.optionB}}
                           </div>

                           <div style="font-size:1.5em;">

                               <input type="radio" style="width:1em;height:1em;" name="option" ng-model="manswer.choosen" value="{{q.optionC}}"  class=""/>
                               &nbsp;
                               {{q.optionC}}
                           </div>
                           <br/>

                           <div ng-repeat="term in q.terms" class="row">
                                 <div class="col-md-3">
                                   <img ng-src = "{{term.image.url}}" class="thumbnail" width="200" height="100"/>
                                 </div>

                                 <div class="col-md-9">
                                   <div><b>Word : {{term.word}}</b></div>
                                   <div style="font-size:1.5em;">{{term.description}}</div>
                                 </div>

                           </div>



                           <div class="" style="margin-top:3em;">
                               <a href="">Keywords : {{q.keywords}}</a>
                           </div>

                           <div class="" style="margin-top:5em;">

                                 <button class="btn btn-primary btn-lg col-md-3 pull-left" ng-show="qIndex > 1" ng-click="prevQuizQuestion()">
                                     Previous
                                  </button>

                                  <button class="btn btn-primary btn-lg col-md-3 col-md-offset-1"  ng-click="verifyAnswer()">
                                     Check Answer
                                  </button>

                                  <button class="btn btn-primary btn-lg col-md-3 pull-right" ng-click="nextQuizQuestion()" ng-show="qIndex < quiz_details.numberOfQuestions">
                                      Next
                                   </button>

                           </div>

                       </div>



                     </div>

                 </div>
             </div>
         </div>

     </div>


     <hr/>
 </div>
</div>
</div>
